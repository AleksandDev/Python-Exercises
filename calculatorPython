result = int(input("Selecione a operação: 1. Soma, 2. Subtração, 3. Multiplicação, 4. Divisão"))
num1 = int(input("Digite o primeiro número: "))
num2 = int(input("Digite o segundo número: "))
if result == 1:
    print(somar(num1, num2))
elif result == 2:
    print(subtrair(num1, num2))
elif result == 3:
    print(multiplicar(num1, num2))
elif result == 4:
    print(dividir(num1, num2))
    
def somar(num1, num2):
  resultado = num1 + num2
  return resultado
  print(resultado)

def subtrair(num1, num2):
  resultado = num1 - num2
  return resultado
  print(resultado)

def multiplicar(num1, num2):
  resultado = num1 * num2
  return resultado
  print(resultado)

def dividir(num1, num2):
  resultado = num1 / num2
  return resultado
  print(resultado)
